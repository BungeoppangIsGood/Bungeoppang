        function editStore() {
            let form = document.getElementById("form_info");
            let menuName = {};
            
            if (Ìå•) menuName="Ìå•"
            if (ÏäàÌÅ¨Î¶º) menuName="ÏäàÌÅ¨Î¶º"

            axios({
