<html>
    <head>
        <title>storeDetail</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
        <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300&amp;display=swap'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
        <link rel="icon" href="./img/mapIcon.PNG">
        <style>
            @import url(//fonts.googleapis.com/earlyaccess/jejuhallasan.css);
            .jm-font{
                font-family: 'Noto Sans KR', sans-serif;
                /* font-family: 'Jeju Hallasan', cursive; */
            }
            /* 가게 이름 */
            #storeName {
                text-align: center;
                font-size: 3rem;
                font-weight: 500;
            }
            /* 가게 정보 */
            #info {
                font-size: 1.7rem;
                padding: 20px;
            }
            #infoDetail {
                font-size: 1.65rem;
            }
            /* 가게 정보 로고 */
            .fish{
                width: 70px;
                margin: -10px;
            }
            .star-rating {
            border:solid 1px #ccc;
            display:flex;
            flex-direction: row-reverse;
            font-size:1.5em;
            justify-content:space-around;
            padding:0 .2em;
            text-align:center;
            width:7px;
            }
            .star-rating input {
            display:none;
            }
            .star-rating label {
            color:#ccc;
            cursor:pointer;
            }
            .star-rating :checked ~ label {
            color:#f90;
            }
            .star-rating label:hover,
            .star-rating label:hover ~ label {
            color:#fc0;
            }
            /* contents 및 별점 남기기 */
            .wrap{
                width: 100%;
                height: 100%;
                position: relative;
            }
            .detail {
                position: absolute;
                display: block;
            }
            .regiSTar {
                position: absolute;
                top: 395px;
                width: 414px;
                height: 130px;
                display: none;
            }
            .starCard {
                border-color: transparent;
                position: absolute;
                left: 30%;
                top: 48%;
            }
            .starRegi {
                position: absolute;
                border-radius: 50px;
                left: 65%;
                top: 50%;
            }
            /* 버튼 */
            .button {
                padding-left: 30px;
                padding-right: 30px;
            }
            .button > button {
                background-color : #FFBF00;
                font-size: 1.8rem;
            }
            #home {
                width: 180px; 
                position: absolute; 
                left: 40%; 
                top: 91.5%;
            }
        </style>
    </head>
    <body>
        <div class="wrap">
            <div class="scene flex detail jm-font">
                <div class="card" style="width: 100%">
                    <img src="./img/IMG_0652.PNG" class="card-img-top animate__animated animate__tada"alt="..."><!-- 아이콘 부분 -->
                    <div class="card-body">
                    <h5 class="card-title jm-font" id="storeName">행복한 잉어빵</h5>
                    <p class="card-text"></p>
                </div>
                    <ul class="list-group list-group-flush">
                    <li class="list-group-item" id="info"><img src="./img/IMG_0652.PNG" class="fish" alt="...">평점
                        <ol style="float: right;" id = "average" > ⭐⭐⭐⭐⭐ <span>(5.0)</span></ol>
                    </li>
                    <li class="list-group-item" id="info"><img src="./img/IMG_0652.PNG" class="fish" alt="...">메뉴<br>
                        <ol style="float: right;" id="infoDetail">팥 2개 1000원</ol> <br>
                        <ol style="float: right;" id="infoDetail">슈크림 2개 1000원</ol>
                    </li>
                    <li class="list-group-item" id="info"><img src="./img/IMG_0652.PNG" class="fish" alt="...">이용시간
                        <ol style="float: right;" id="infoDetail">Open: 월,화,수,목,금</ol>
                    </li>
                    </ul>
                    <div class="card-body button">
                        <button type="button" class="btn" id="recordStar">별점 남기기</button>
                        <img src="./img/IMG_0652.PNG" class="card-img-top animate__animated animate__bounceIn" id="home" onclick="home();"><!-- 홈화면 이동 -->
                        <button href="views/shopregister" type="button" class="btn btn-warning" style="float: right; font-size: 1.8rem;">가게 수정하기</button>
                    </div>
            </div>
        </div>
        <div class="card text-dark bg-light mb-3 regiSTar jm-font" id="div2">
            <div class="card-header titleStar"><img src="./img/IMG_0652.PNG" class="fish" alt="...">별점 남기기</div>
                <div class="card-body contentStar">
                    <div class="star-rating starCard" id="star">
                        <input type="radio" id="5-stars" name="rating" value="5" />
                        <label for="5-stars" class="star">&#9733;</label>
                        <input type="radio" id="4-stars" name="rating" value="4" />
                        <label for="4-stars" class="star">&#9733;</label>
                        <input type="radio" id="3-stars" name="rating" value="3" />
                        <label for="3-stars" class="star">&#9733;</label>
                        <input type="radio" id="2-stars" name="rating" value="2" />
                        <label for="2-stars" class="star">&#9733;</label>
                        <input type="radio" id="1-star" name="rating" value="1" />
                        <label for="1-star" class="star">&#9733;</label>
                    </div>
                    <button class="btn btn-warning starRegi" onclick="regiStar();">등록</button>
                </div>
            </div>
        </div>    
        <script>
            function recordStar() {
                let button = document.querySelectorAll("button")[0];
                
                button.addEventListener("click", function(){
                    let content = document.querySelector("#div2");
                    if (content.style.display == "none") {
                        content.style.display = "block";
                        button.style.backgroundColor = "#F7D358"
                    } else { 
                        content.style.display = "none";
                        button.style.backgroundColor = "#FFBF00";
                    }
                })
            }
            recordStar();
            /* 1. regiStar 버튼을 누르면  */
           function regiStar() {
                let star = document.getElementById("star");
                let rating = {
                    rating: star.star.value
                }
                /* 여기는 일단 보류임 */
                axios({
                    method: 'post',
                    url: '/store/star',
                    data: rating
                })
                .then(() => {
                    alert("별점 남기기 성공");
                    document.querySelector("#div2").style.display = "none";
                })
                .then((req) => {
                    if(req.ratingAVG >= 5){
                        document.getElementById("average").innerText= "★★★★★"
                    } else if ( 5 > req.ratingAVG >=4.5 ){
                        document.getElementById("average").innerText= "★★★★"
                    } else if ( 4.5 > req.ratingAVG >=4 ){
                        document.getElementById("average").innerText= "★★★★☆"
                    } else if ( 4 > req.ratingAVG >=3.5 ){
                        document.getElementById("average").innerText= "★★★★☆"
                    } else if ( 3.5 > req.ratingAVG >=3 ){
                        document.getElementById("average").innerText= "★★★☆☆"
                    } else if ( 3 > req.ratingAVG >=2.5 ){
                        document.getElementById("average").innerText= "★★★☆☆"
                    } else if ( 2.5 > req.ratingAVG >=2 ){
                        document.getElementById("average").innerText= "★★☆☆☆"
                    } else if ( 2 > req.ratingAVG >1.5 ){
                        document.getElementById("average").innerText= "★★☆☆☆"
                    } else if ( 1.5 > req.ratingAVG >=1 ){
                        document.getElementById("average").innerText= "★☆☆☆☆"
                    } else if ( 1 > req.ratingAVG >=0.5 ){
                        document.getElementById("average").innerText= "★☆☆☆☆"
                    } else {
                        document.getElementById("average").innerText= "☆☆☆☆☆"
                    } 
                    
                })
            }
            function home() {
                window.location.href = "/map"
            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    </body>
</html>