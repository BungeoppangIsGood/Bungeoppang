<html>
    <head>
        <title>storeDetail</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
        <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300&amp;display=swap'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
        <link rel="icon" href="./img/mapIcon.PNG">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <link rel="stylesheet" href="/static/css/shopdetail.css" />
    <script>
        console.log('<%=ratinglist%>');
    </script>
    </head>
    <body>
        <div class="wrap">
            <div class="scene flex detail jm-font">
                <div class="card" style="width: 100%">
                    <img src="/static/img/IMG_0652.PNG" class="card-img-top animate__animated animate__tada"alt="..."><!-- 아이콘 부분 -->
                    <div class="card-body">
                    <h5 class="card-title jm-font" name="storeName" id="storeName"><%=data.storeName%></h5>
                    <p class="card-text"></p>
                </div>
                    <ul class="list-group list-group-flush">
                    <li class="list-group-item" id="info" onclick="stars();"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">평점
                        <ol style="float: right;" id = "average" ><img src="/static/img/<%=Math.round(req.data.ratingAVG)%>.PNG" alt=""class="stars" id="stars"><span id="aa"><%=data.ratingAVG%></span></ol>
                    </li>
                    <div id="starPeople">
                        <li class="list-group-item" id="info"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">별점을 남긴 사람들
                            <button type="button" class="btn-close" aria-label="Close" onclick="starPeopleClose();"style="float: right; font-size: 2.8rem;"></button><br><br>
                            <div class="row">
                                <%for(var i = 0; i<ratinglist.length; i++) {%>
                                    <div class="col-sm-12">
                                        <div class="card">
                                          <div class="card-body">
                                            <h5 class="card-title sPid"><%=ratinglist[i].User_nickName%></h5>
                                            <!-- <h5 class="card-title sPuserId"><%=ratinglist[i].User_nickName%></h5> -->
                                            <p class="card-text sPstar"><img src="/static/img/<%=ratinglist[i].star%>.PNG" alt=""id="starPeopleStars"></p>
                                          </div>
                                        </div>
                                      </div>
                                <% } %>
                            </div>
                        </li>
                    </div>
                    
                    <li class="list-group-item" id="info"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">메뉴<br>
                        <% if(menu1) { %>
                            <ol style="float: right;" id="infoDetail"><%=menu1.menuName%> <%=menu1.price%></ol>
                        <% } else if(menu1 && menu2) { %>
                            <ol style="float: right;" id="infoDetail"><%=menu1.menuName%> <%=menu1.price%></ol>
                            <br><ol style="float: right;" id="infoDetail"><%=menu2.menuName%> <%=menu2.price%></ol>
                        <% } %> else if(menu2) { %>
                            <ol style="float: right;" id="infoDetail"><%=menu2.menuName%> <%=menu2.price%></ol>
                        <% } %>
                        
                    </li>
                    <li class="list-group-item" id="info"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">이용 요일
                        <ol style="float: right;" id="infoDetail">Open: <%=data.operatingTime%></ol>
                    </li>
                    </ul>
                    <div class="card-body button">
                        <button type="button" class="btn" id="recordStar">별점 남기기</button>
                        <img src="/static/img/home.PNG" class="card-img-top animate__animated animate__bounceIn" id="home" onclick="home();"><!-- 홈화면 이동 -->
                        <button href="./shopEdit.ejs" type="button" class="btn btn-warning" style="float: right; font-size: 2.8rem;">가게 수정하기</button>
                    </div>
            </div>
        </div>
        <div class="card text-dark bg-light mb-3 regiSTar jm-font" id="div2">
            <div class="card-header titleStar"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">별점 남기기
                <button type="button" class="btn-close" aria-label="Close" onclick="regiStarClose();"style="float: right; font-size: 2.8rem;"></button></div>
                <div class="card-body contentStar">
                    <form id="form_star">
                        <div class="star-rating starCard" id="star">
                            <input type="radio" id="5-stars" name="rating" value="5" />
                            <label for="5-stars" class="star">&#9733;</label>
                            <input type="radio" id="4-stars" name="rating" value="4" />
                            <label for="4-stars" class="star">&#9733;</label>
                            <input type="radio" id="3-stars" name="rating" value="3" />
                            <label for="3-stars" class="star">&#9733;</label>
                            <input type="radio" id="2-stars" name="rating" value="2" />
                            <label for="2-stars" class="star">&#9733;</label>
                            <input type="radio" id="1-star" name="rating" value="1" />
                            <label for="1-star" class="star">&#9733;</label>
                        </div>
                        <button type="button" class="btn btn-warning starRegi" onclick="regiStar();">등록</button>
                    </form>
                </div>
            </div>
        </div>
        <span>
            <input
              style="font-size: 15px; width: 300px; font-weight: bold"
              class="form-control"
              type="text"
              value=""
              aria-label="Disabled input example"
              disabled
              readonly
            />
          </span>
        </div>
        <div>
           <span>
             <input
               style="font-size: 15px; width: 300px; font-weight: bold"
               class="form-control2"
               type="text"
               value=""
               aria-label="Disabled input example"
               disabled
               readonly
             />
           </span>
         </div>
         <div>
           <span>
             <input
               style="font-size: 15px; width: 300px; font-weight: bold"
               class="form-control3"
               type="text"
               value=""
               aria-label="Disabled input example"
               disabled
               readonly
             />
           </span>
        <script src="/static/js/shopdetail.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    </body>
</html>