<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>마이페이지</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300&amp;display=swap"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link rel="stylesheet" href="/static/css/const.css" />

    <link rel="stylesheet" href="/static/css/user.css" />
    <link rel="icon" href="/static/img/mapIcon.PNG" />
    <script>
      function profileEdit() {
        const form = document.getElementById("form_profile");
        if (!form.checkValidity()) {
          form.reportValidity();
          return false;
        }
        let user = {
          id: form.id.value,
          pw: form.pw.value,
          name: form.name.value,
          nickName: form.nickName.value,
          profileImg: form.profileImg1.value,
        };

        if (form.pw.value === "123123" && form.profileImg === form.profileImg) {
          form.pw.value = null;
        }
        axios({
          method: "patch",
          url: "/user/update",
          data: user,
        }).then((data) => {
          if (data) {
            alert("회원정보 수정 성공");
          } else {
            alert("알 수 없는 문제가 발생했습니다.");
          }
        });
      }

      // 기본 이미지로 변경

      function profileDelete() {
        const form = document.getElementById("form_profile");
        if (!form.checkValidity()) {
          form.reportValidity();
          return false;
        }
        let user = {
          id: form.id.value,
        };
        axios({
          method: "delete",
          url: "/user/delete",
          data: user,
        })
          .then((rep) => {
            return rep.data;
          })
          .then((data) => {
            if (data) {
              alert("회원 탈퇴 성공");
              document.location.href = "/signin";
            } else {
              alert("알 수 없는 문제가 발생했습니다.");
            }
          });
      }

      function uploads() {
        const formData = new FormData();
        const file = document.getElementById("profileImg");
        formData.append("profileImg", file.files[0]);
        axios({
          method: "patch",
          url: "user/profileImgUpdate",
          data: formData,
          headers: {
            "Content-Type": "multipart/form-data",
          },
        }).then(function (response) {
          console.log(response);
          const img = document.querySelector("img");
          img.src = `uploads/${response.data}`;
          document.getElementById("profileImg1").value = response.data;
          console.log(document.getElementById("profileImg1").value);
        });
      }
      console.log("<%=data.userId%>");

      function toggle() {
        document.querySelector(".profile-image input").click();
      }
      console.log("<%=data.profileImg%>");
    </script>
  </head>
  <body style="padding-bottom: 1000px">
    <div class="scene flex">
      <section
        class="card"
        style="
          display: flex;
          flex-direction: column;
          align-items: center;
          background-color: white;
        "
      >
        <h1 class="card__heading" style="position: relative">
          <span> 마이페이지 </span>
        </h1>
        <button
          class="material-symbols-outlined"
          onclick="back()"
          style="
            font-size: 30px;
            position: absolute;
            left: -8px;
            top: -10px;
            background-color: white;
            color: black;
          "
        >
          close
        </button>

        <div
          style="
            width: 250px;
            height: 250px;
            border-radius: 50%;
            overflow: hidden;
            display: flex;
          "
        >
          <% if(data.profileImg === 'defaultImg') { %>
          <img src="/static/img/fish.PNG" style="width: 100%; height: 100%" />
          <% } else { %>
          <img
            src="/uploads/<%=data.profileImg%>"
            style="width: 100%; height: 100%"
          />
          <% } %>
        </div>
        <br />
        <div class="profile-image">
          <label for="profileImg" class="visually"
            >프로필 사진을 선택해주세요</label
          >
          <input
            class="card__button"
            type="file"
            name="profileImg"
            id="profileImg"
            class="card__input"
            placeholder="hi"
            style="display: none"
          />
          <button onclick="toggle()">선택</button>
          <button class="card__button" type="button" onclick="uploads();">
            업로드
          </button>
        </div>
        <br />
        <h2 class="card__heading">
          <span> 회원정보 수정 </span>
        </h2>
        <form class="card__form" id="form_profile">
          <label for="name" class="visually">이름 :</label>
          <input
            id="name"
            class="card__input"
            type="text"
            name="name"
            value="<%=data.name%>"
            readonly
          />
          <label for="id" class="visually">아이디 :</label>
          <input
            id="id"
            class="card__input"
            type="text"
            name="id"
            value="<%=data.userId%>"
            readonly
          />
          <label for="password" class="visually">비밀번호 :</label>
          <input
            id="password"
            class="card__input"
            type="password"
            name="pw"
            placeholder="******"
          />
          <label for="name" class="visually">닉네임 :</label>
          <input
            id="nickName"
            class="card__input"
            type="text"
            name="nickName"
            value="<%=data.nickName%>"
            required
          />
          <input
            id="profileImg1"
            type="hidden"
            name="profileImg"
            value="<%=data.profileImg%>"
          />
          <button class="card__button" type="button" onclick="profileEdit();">
            <span>수정</span>
          </button>

          <button
            type="button"
            class="card__button"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            style="background-color: red"
          >
            회원탈퇴
          </button>
        </form>
      </section>
    </div>
    <div style="height: 95px"></div>
    <nav class="navbar navbar-expand-lg bg-light position-fixed">
      <button type="button" class="bg-light" onclick="home()">
        <span class="material-symbols-outlined text-dark"> home </span>
        <p class="m-0 text-dark">홈</p>
      </button>

      <button type="button" class="bg-light" onclick="registration()">
        <span class="material-symbols-outlined text-dark"> where_to_vote </span>
        <p class="m-0 text-dark">가게등록</p>
      </button>

      <button type="button" class="bg-light" onclick="myPage()">
        <span class="material-symbols-outlined text-dark">
          sentiment_satisfied
        </span>
        <p class="m-0 text-dark">MY</p>
      </button>

      <button type="button" class="bg-light" onclick="logOut()">
        <span class="material-symbols-outlined text-dark"> login </span>
        <p class="m-0 text-dark">로그아웃</p>
      </button>
    </nav>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1
              class="modal-title fs-5"
              id="exampleModalLabel"
              style="color: red"
            >
              정말 탈퇴 하시겠습니까?
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" style="color: red">
            <img
              src="static/img/fish.PNG"
              style="width: 150px"
              class="animate__animated animate__hinge"
            />진짜요?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              아니요
            </button>
            <button
              type="button"
              class="btn btn-secondary"
              onclick="profileDelete();"
            >
              예
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="static/js/mypage.js"></script>
  </body>
</html>
