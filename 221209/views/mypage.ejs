<html>
    <head>
        <title>마이페이지</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
        <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300&amp;display=swap'>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <link rel="stylesheet" href="/static/css/user.css">
        <script>
            // function dataToNull() {
            //     if(form.data.pw === 123123) {
            //         return false;
            //     }
            // }

            function profileEdit() {
                var form = document.getElementById("form_profile");
                if ( !form.checkValidity() ) {
                    form.reportValidity();
                    return false;
                }
                let user = {
                    id: form.id.value,
                    pw: form.pw.value,
                    name: form.name.value,
                    nickName: form.nickName.value,
                    profileImg:form.profileImg1.value
                };
                
                axios({
                    method: 'patch',
                    url: '/user/update', // 내정보 수정 url
                    data: user
                }).then((data) => {
                    if( data ) {
                        alert( "회원정보 수정 성공" );
                    } else {
                        alert( "알 수 없는 문제가 발생했습니다." );
                    }
                });
            }

            function profileDelete() {
                var form = document.getElementById("form_profile");
                if ( !form.checkValidity() ) {
                    form.reportValidity();
                    return false;
                }
                let user = {
                    id: form.id.value
                };
                axios({
                    method: 'delete',
                    url: '/user/profile/delete',
                    data: user
                }).then((rep) => {return rep.data;} )
                .then((data) => {
                    if( data ) {
                        alert( "회원 탈퇴 성공" );
                        document.location.href = "/user/signin";
                    } else {
                        alert( "알 수 없는 문제가 발생했습니다." );
                    }
                });
            }
            function uploads(){
                const formData = new FormData();
                const file = document.getElementById('profileImg');
                formData.append('profileImg', file.files[0]);
                // console.dir(formData)
                
                axios({
                    method: 'patch',
                    url: 'user/profileImgUpdate',
                    data: formData,
                    headers: {
                        'Content-Type' : 'multipart/form-data',
                    },
                }).then(function (response) {
                    console.log(response);
                    const img = document.querySelector('img');
                    img.src = `uploads/${response.data}`
                    document.getElementById("profileImg1").value = response.data;
                    console.log(document.getElementById("profileImg1").value)
                })
            }
            console.log('<%=data.userId%>')

            function toggle() {
                document.querySelector('.profile-image input').click();
            }
        </script>
    </head>
    <body>
        <div class="scene flex">
            <section class="card" style="display: flex; flex-direction: column; align-items: center; background-color: white;">
                <h1 class="card__heading">
                    <span> 마이페이지 </span>
                </h1>
                <div style="width: 400px; height: 400px; background: rgb(231, 227, 227); border-radius: 50%; overflow: hidden; display: flex;">
                    <img src="/static/img/fish.png"  alt="..." style="width: 100%; height: 100%;">
                </div>
                <br>
                <div class="profile-image">
                    <label for="profileImg" class="visually">프로필 사진을 선택해주세요</label>
                    <input class="card__button" type="file" name="profileImg" id="profileImg" class="card__input" placeholder="hi" style="display: none;">
                    <button onclick="toggle()">선택</button>
                    <button class="card__button" type="button" onclick="uploads();">업로드</button>
                </div>
                <br>
            

                <h2 class="card__heading">
                    <span> 회원정보 수정 </span>
                </h2>

                
                <form class="card__form" id="form_profile">
                <label for="name" class="visually">이름 :</label>
                <input id="name" class="card__input" type="text" name="name" value="<%=data.name%>" readonly />
                <label for="id" class="visually">아이디 :</label>
                <input id="id" class="card__input" type="text" name="id" value="<%=data.userId%>" readonly />
                <label for="password" class="visually">비밀번호 :</label>
                <input id="password" class="card__input" type="password" name="pw" placeholder="******" />
                <label for="name" class="visually">닉네임 :</label>
                <input id="nickName" class="card__input" type="text" name="nickName" value="<%=data.nickName%>" required />
                <input id="profileImg1" type="hidden" name="profileImg">
                <button class="card__button" type="button" onclick="profileEdit();">
                <span>수정</span>
                </button>
                <button class="card__button" type="button" onclick="profileDelete();">
                <span>삭제</span>
                </button>
             </form>
            </section>
        </div>
    </body>
</html>